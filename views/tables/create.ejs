<h1 class="mb-4">Create New Table</h1>
<form action="/api/tables" method="POST">
  <div class="form-group mb-3">
    <label for="tableNumber">Table Number</label>
    <input type="text" class="form-control" id="tableNumber" name="tableNumber" required>
  </div>
  <div class="form-group mb-3">
    <label for="capacity">Capacity</label>
    <input type="number" class="form-control" id="capacity" name="capacity" min="1" required>
  </div>
  <div class="form-group mb-3">
    <label for="location">Location</label>
    <input type="text" class="form-control" id="location" name="location">
  </div>
  <div class="form-check mb-3">
    <input type="checkbox" class="form-check-input" id="isAvailable" name="isAvailable" value="true" checked>
    <label class="form-check-label" for="isAvailable">Is Available</label>
  </div>
  <button type="submit" class="btn btn-success">Create Table</button>
</form>